{
  "claude.enabled": true,
  "claude.autoStart": true,
  "terminal.integrated.defaultProfile.osx": "Claude Code",
  "terminal.integrated.defaultProfile.windows": "Claude Code",
  "terminal.integrated.defaultProfile.linux": "Claude Code",
  "workbench.startupEditor": "terminal",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.title": "Claude Code Assistant",
  "workbench.colorTheme": "Default Dark+",
  "editor.fontSize": 16,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.suggestOnTriggerCharacters": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "workbench.panel.defaultLocation": "right",
  "terminal.integrated.defaultLocation": "view",
  "diffEditor.renderSideBySide": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "git.enableSmartCommit": true,
  "git.openDiffOnClick": true,
  "claude.showDiffsInline": true,
  "claude.autoShowDiffs": true,
  "scm.defaultViewMode": "tree",
  "scm.alwaysShowActions": true,
  "workbench.view.alwaysShowHeaderActions": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.autoSave": "afterDelay",
  "workbench.tips.enabled": false,
  "workbench.welcomePage.walkthroughs.openOnInstall": false,
  "telemetry.telemetryLevel": "off"
}